# Makefile

.PHONY: default

default: make

make:
	@echo "ğŸ§¹ Cleaning Flutter project..."
	flutter clean

	@echo "ğŸ“¦ Fetching dependencies..."
	flutter pub get

	@echo "ğŸ§½ Cleaning CocoaPods..."
	cd ios && rm -rf Pods Podfile.lock

	@echo "ğŸ“¦ Installing CocoaPods..."
	cd ios && pod cache clean --all && pod install

	@echo "âœ… Done!"

	@echo "open ios/Runner.xcworkspace"
	open ios/Runner.xcworkspace


fix-xcode:
	open ios/Runner.xcworkspace
	@echo "âš™ï¸  Now manually add: \`$(PROJECT_DIR)/Flutter\` to Framework Search Paths in Xcode (Debug/Profile/Release)"
